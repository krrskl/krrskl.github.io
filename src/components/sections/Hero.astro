<style>
.hero-header {
	display: flex;
	align-items: center;
	gap: 1.5rem;
	margin-bottom: 1.5rem;
}

.hero-avatar {
	margin: 0;
	flex-shrink: 0;
}

.hero-avatar img {
	width: 120px;
	height: 120px;
	object-fit: cover;
}

.hero-info {
	display: flex;
	flex-direction: column;
	gap: 0.75rem;
}

.hero-title {
	font-size: 1.5rem;
	font-weight: 700;
	color: #fff;
	margin: 0;
	line-height: 1.3;
}

.hero-name {
	display: block;
}

.user__available {
	display: inline-flex;
	align-items: center;
	background: #fff;
	border-radius: 9999px;
	padding: 0.35rem 0.75rem;
	font-size: 0.75rem;
	font-style: italic;
	color: #1a1a2e;
	width: fit-content;
}

.social-link {
	color: #9ca3af;
	transition:
		color 0.2s ease,
		transform 0.2s ease;
}

.social-link:hover {
	color: #fff;
	transform: translateY(-2px);
}

.user__available--circle {
	position: relative;
	box-sizing: content-box;
	width: 8px;
	height: 8px;
	border-radius: 50%;
	background: var(--green-color);
	margin-right: 0.5rem;
}

.user__available--circle::after {
	content: '';
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	animation: circle-pulse 2s infinite;
	border-radius: 50%;
	box-shadow: 0 0 0 0 var(--green-color);
}

@keyframes circle-pulse {
	0% {
		transform: scale(0.95);
		box-shadow: 0 0 0 0 rgba(77, 170, 87, 0.9);
	}
	50% {
		transform: scale(1);
		box-shadow: 0 0 0 6px rgba(77, 170, 87, 0);
	}
	100% {
		transform: scale(0.95);
		box-shadow: 0 0 0 0 rgba(77, 170, 87, 0);
	}
}

@media (min-width: 640px) {
	.hero-avatar img {
		width: 140px;
		height: 140px;
	}

	.hero-title {
		font-size: 2rem;
	}

	.hero-name {
		display: inline;
	}
}

@media (max-width: 400px) {
	.hero-header {
		flex-direction: column;
		align-items: flex-start;
		gap: 1rem;
	}

	.hero-avatar img {
		width: 100px;
		height: 100px;
	}
}
</style>
