---
import { SITE_TITLE } from "../consts";
---

<header>
	<nav class="container sm:px-4 px-2 mx-auto my-8">
		<h4 class="logo text-center w-full"><a href="/">{SITE_TITLE}</a></h4>

		<!-- <button
			class="menu-toggle"
			id="menu-toggle"
			aria-label="Toggle menu"
			aria-expanded="false"
		>
			<span class="hamburger"></span>
		</button> -->

		<div class="links" id="nav-links">
			<!-- <a href="#about">Sobre mi</a> -->
